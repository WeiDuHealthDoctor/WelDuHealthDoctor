<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".view.SettleinActivity">
    <TextView
        android:text="完善信息"
        android:textColor="#2196F3"
        android:layout_marginRight="@dimen/dp_30"
        android:layout_marginLeft="@dimen/dp_30"
        android:textSize="@dimen/dp_16"
        android:layout_marginTop="@dimen/dp_74"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <TextView
        android:text="申请通过即可入驻"
        android:textColor="#2196F3"
        android:layout_marginRight="@dimen/dp_30"
        android:layout_marginLeft="@dimen/dp_30"
        android:textSize="@dimen/dp_16"
        android:layout_marginTop="@dimen/dp_10"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <TextView
        android:layout_marginTop="@dimen/dp_10"
        android:layout_marginRight="@dimen/dp_30"
        android:layout_marginLeft="@dimen/dp_30"
        android:text="*请写正确信息有助于快速通过审核"
        android:textColor="#F00000"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <TextView
        android:text="您的真实姓名"
        android:layout_marginRight="@dimen/dp_30"
        android:layout_marginLeft="@dimen/dp_30"
        android:textSize="@dimen/dp_16"
        android:layout_marginTop="@dimen/dp_48"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <LinearLayout
        android:background="@drawable/apply_selector"
        android:layout_marginTop="@dimen/dp_10"
        android:layout_marginRight="@dimen/dp_30"
        android:layout_marginLeft="@dimen/dp_30"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_41">

        <EditText
            android:id="@+id/apply_mail"
            android:background="@drawable/apply_selector"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_40"/>


    </LinearLayout>

    <TextView
        android:text="您所在医院"
        android:layout_marginRight="@dimen/dp_30"
        android:layout_marginLeft="@dimen/dp_30"
        android:textSize="@dimen/dp_16"
        android:layout_marginTop="@dimen/dp_30"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <EditText
        android:layout_marginTop="@dimen/dp_10"
        android:id="@+id/apply_yan"
        android:layout_marginRight="@dimen/dp_30"
        android:layout_marginLeft="@dimen/dp_30"
        android:background="@drawable/apply_selector"
        android:layout_width="@dimen/dp_300"
        android:layout_height="@dimen/dp_40"/>

    <TextView
        android:text="您所在科室"
        android:layout_marginRight="@dimen/dp_30"
        android:layout_marginLeft="@dimen/dp_30"
        android:textSize="@dimen/dp_16"
        android:layout_marginTop="@dimen/dp_30"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <LinearLayout
        android:background="@drawable/apply_selector"
        android:layout_marginTop="@dimen/dp_10"
        android:layout_marginRight="@dimen/dp_30"
        android:layout_marginLeft="@dimen/dp_30"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_40">

        <EditText
            android:id="@+id/apply_pwd"
            android:layout_marginRight="@dimen/dp_10"
            android:background="@drawable/apply_selectorsecond"
            android:layout_width="@dimen/dp_0"
            android:layout_weight="1"
            android:layout_height="@dimen/dp_40"/>

        <ImageView
            android:id="@+id/yanfirth"
            android:src="@drawable/circle_icon_drop_down_n"
            android:layout_gravity="center"
            android:layout_marginRight="@dimen/dp_10"
            android:layout_width="@dimen/dp_16"
            android:layout_height="@dimen/dp_16"/>

    </LinearLayout>

    <TextView
        android:text="您的职称"
        android:layout_marginRight="@dimen/dp_30"
        android:layout_marginLeft="@dimen/dp_30"
        android:textSize="@dimen/dp_16"
        android:layout_marginTop="@dimen/dp_30"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <LinearLayout
        android:background="@drawable/apply_selector"
        android:layout_marginTop="@dimen/dp_10"
        android:layout_marginRight="@dimen/dp_30"
        android:layout_marginLeft="@dimen/dp_30"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_40">

        <EditText
            android:id="@+id/apply_agpwd"
            android:layout_marginRight="@dimen/dp_10"
            android:background="@drawable/apply_selectorsecond"
            android:layout_width="@dimen/dp_0"
            android:layout_weight="1"
            android:layout_height="@dimen/dp_40"/>

        <ImageView
            android:id="@+id/yansecond"
            android:src="@drawable/circle_icon_drop_down_n"
            android:layout_gravity="center"
            android:layout_marginRight="@dimen/dp_10"
            android:layout_width="@dimen/dp_16"
            android:layout_height="@dimen/dp_16"/>

    </LinearLayout>

    <Button
        android:id="@+id/nextfoot"
        android:text="下一步"
        android:textColor="#F5F1F1"
        android:background="@drawable/next_selector"
        android:textSize="@dimen/dp_16"
        android:layout_marginTop="@dimen/dp_30"
        android:layout_marginRight="@dimen/dp_30"
        android:layout_marginLeft="@dimen/dp_30"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_60"/>
</LinearLayout>