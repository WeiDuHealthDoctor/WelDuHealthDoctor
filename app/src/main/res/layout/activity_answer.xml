<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".view.AnswerActivity">
    <RelativeLayout
        android:layout_marginRight="@dimen/dp_20"
        android:layout_marginLeft="@dimen/dp_20"
        android:layout_marginTop="@dimen/dp_28"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/anwser_back"
            android:src="@drawable/common_icon_back_black_n"
            android:layout_width="@dimen/dp_16"
            android:layout_height="@dimen/dp_16"/>

        <ImageView
            android:id="@+id/anser_clock"
            android:src="@drawable/common_nav_message_black_n"
            android:layout_alignParentRight="true"
            android:layout_width="@dimen/dp_20"
            android:layout_height="@dimen/dp_20"/>

    </RelativeLayout>

    <LinearLayout
        android:layout_marginLeft="@dimen/dp_20"
        android:layout_marginRight="@dimen/dp_20"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_10">

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content">

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/answertoprec"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/dp_10"/>

        </RelativeLayout>

        <ImageView
            android:id="@+id/answer_search"
            android:layout_alignParentRight="true"
            android:src="@drawable/common_icon_search_n"
            android:layout_width="@dimen/dp_16"
            android:layout_height="@dimen/dp_16"/>

    </LinearLayout>

    <View
        android:layout_marginTop="@dimen/dp_3"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_6"
        android:background="#DDDDDD"></View>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/answerbottomrec"
        android:layout_marginTop="@dimen/dp_26"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

</LinearLayout>