<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".view.MangerActivity">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="@dimen/dp_240">

        <com.facebook.drawee.view.SimpleDraweeView
            android:id="@+id/my_image"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_260"
            android:scaleType="fitXY" />

        <ImageView
            android:id="@+id/my_back"
            android:layout_width="@dimen/dp_16"
            android:layout_height="@dimen/dp_16"
            android:layout_marginLeft="@dimen/dp_20"
            android:layout_marginTop="@dimen/dp_42"
            android:src="@drawable/common_icon_back_black_n" />

        <ImageView
            android:id="@+id/my_message"
            android:layout_width="@dimen/dp_20"
            android:layout_height="@dimen/dp_24"
            android:layout_alignParentRight="true"
            android:layout_marginLeft="@dimen/dp_20"
            android:layout_marginTop="@dimen/dp_42"
            android:layout_marginRight="@dimen/dp_20"
            android:src="@drawable/common_nav_message_black_n" />

        <TextView
            android:id="@+id/my_query"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginRight="5dp"
            android:layout_marginBottom="@dimen/dp_9"
            android:layout_toLeftOf="@+id/fang"
            android:text="查看资料"
            android:textSize="@dimen/dp_12" />

        <ImageView
            android:id="@+id/fang"
            android:layout_width="@dimen/dp_13"
            android:layout_height="@dimen/dp_12"
            android:layout_alignBottom="@+id/my_query"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"
            android:layout_marginRight="@dimen/dp_20"
            android:layout_marginBottom="@dimen/dp_10"
            android:src="@drawable/common_information_next_n" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_144"
        android:layout_marginLeft="@dimen/dp_30"
        android:layout_marginTop="@dimen/dp_20"
        android:layout_marginRight="@dimen/dp_30"
        android:orientation="horizontal">

        <RelativeLayout
            android:layout_width="@dimen/dp_130"
            android:layout_height="@dimen/dp_144"
            android:background="@drawable/my_selector">

            <ImageView
                android:id="@+id/my_history"
                android:layout_width="@dimen/dp_48"
                android:layout_height="@dimen/dp_48"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="@dimen/dp_28"
                android:src="@drawable/my_icon_historical_inquiry_n" />

            <TextView
                android:id="@+id/text_history"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/my_history"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="@dimen/dp_24"
                android:text="历史问诊"
                android:textSize="@dimen/dp_14" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="@dimen/dp_130"
            android:layout_height="@dimen/dp_144"
            android:layout_marginLeft="@dimen/dp_40"
            android:background="@drawable/my_selector">

            <ImageView
                android:id="@+id/my_wallet"
                android:layout_width="@dimen/dp_48"
                android:layout_height="@dimen/dp_48"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="@dimen/dp_28"
                android:src="@drawable/my_icon_wallet_n" />

            <TextView
                android:id="@+id/text_wallet"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/my_wallet"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="@dimen/dp_24"
                android:text="我的钱包"
                android:textSize="@dimen/dp_14" />

        </RelativeLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_144"
        android:layout_marginLeft="@dimen/dp_30"
        android:layout_marginTop="@dimen/dp_20"
        android:layout_marginRight="@dimen/dp_30"
        android:orientation="horizontal">

        <RelativeLayout
            android:layout_width="@dimen/dp_130"
            android:layout_height="@dimen/dp_144"
            android:background="@drawable/my_selector">

            <ImageView
                android:id="@+id/my_suggest"
                android:layout_width="@dimen/dp_48"
                android:layout_height="@dimen/dp_48"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="@dimen/dp_28"
                android:src="@drawable/my_icon_recommendations_adopted_n" />

            <TextView
                android:id="@+id/text_suggest"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/my_suggest"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="@dimen/dp_24"
                android:text="被采纳建议"
                android:textSize="@dimen/dp_14" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="@dimen/dp_130"
            android:layout_height="@dimen/dp_144"
            android:layout_marginLeft="@dimen/dp_40"
            android:background="@drawable/my_selector">

            <ImageView
                android:id="@+id/my_reply"
                android:layout_width="@dimen/dp_48"
                android:layout_height="@dimen/dp_48"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="@dimen/dp_28"
                android:src="@drawable/my_icon_automatic_response_n" />

            <TextView
                android:id="@+id/text_reply"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/my_reply"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="@dimen/dp_24"
                android:text="设置自动回复"
                android:textSize="@dimen/dp_14" />

        </RelativeLayout>

    </LinearLayout>
</LinearLayout>